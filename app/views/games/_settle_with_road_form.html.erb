<%= form_tag(game_path, method: :patch) do %>
  <%= hidden_field_tag(:state, state) %>
  <div class="columns">
    <div class="column">
      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <%= label_tag(:settlement, "Settle with road:", class: 'label') %>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= text_field(:settlement, :spot_index, class: 'input', required: true, disabled: disabled, placeholder: 'Settlement') %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= text_field(:road, :to, class: 'input', required: true, disabled: disabled, placeholder: 'Road') %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= submit_tag("Build", class: 'button is-link', disabled: disabled) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
