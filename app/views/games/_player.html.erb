<div class="card <%= 'player-current' if is_current %>">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48 player-<%= player.color %>">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= player.name %></p>
        <p class="subtitle is-6">Score: <%= player.score %></p>
      </div>
    </div>

  </div>
  <div class="card-footer">
    <div class="card-footer-item card-brick has-text-white">B: <%= player.resources.brick %></div>
    <div class="card-footer-item card-lumber has-text-white">L: <%= player.resources.lumber %></div>
    <div class="card-footer-item card-wool">W: <%= player.resources.wool %></div>
    <div class="card-footer-item card-grain">G: <%= player.resources.grain %></div>
    <div class="card-footer-item card-ore">O: <%= player.resources.ore %></div>
  </div>
</div>
